[{
    "blob": "/flash/tarball",
    "handler": {
        "type": "file",
        "path": "/tmp/image-update.tar"
    },
    "actions": {
        "preparation": {
            "type": "systemd",
            "unit": "phosphor-ipmi-flash-bmc-prepare.target"
        },
        "verification": {
            "type": "systemd",
            "unit": "phosphor-ipmi-flash-bmc-verify.target"
        },
        "update": {
            "type": "reboot"
        }
    }
}]
